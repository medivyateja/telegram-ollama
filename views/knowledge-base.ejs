<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Hexa</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-gray-100 min-h-screen">
    <!-- Navigation Bar -->
    <nav class="bg-white shadow-lg">
        <div class="container mx-auto px-6 py-3">
            <div class="flex items-center justify-between">
                <div class="text-xl font-semibold text-gray-700">
                    <a href="/">Hexa</a>
                </div>
                <div class="flex items-center space-x-4">
                    <div class="text-gray-600">
                        Welcome, <span class="font-semibold"><%= user.username %></span>
                    </div>
                    <a href="/profile" class="text-blue-500 hover:text-blue-700">Profile</a>
                    <a href="/logout" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg transition duration-200 ease-in-out">
                        Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Content -->
    <div class="container mx-auto px-6 py-8">
        <% if (messages.success) { %>
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                <%= messages.success %>
            </div>
        <% } %>
        
        <% if (messages.error) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                <%= messages.error %>
            </div>
        <% } %>
        
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold text-gray-800">Knowledge Base</h1>
            <button id="addNewBtn" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg transition">
                Add New Entry
            </button>
        </div>
        
        <!-- Add New Entry Form (Hidden by default) -->
        <div id="addNewForm" class="bg-white shadow rounded-lg mb-8 p-6 hidden">
            <h2 class="text-xl font-semibold mb-4">Add New Knowledge Base Entry</h2>
            <form action="/knowledge-base/add" method="POST">
                <div class="mb-4">
                    <label for="answer" class="block text-gray-700 text-sm font-bold mb-2">Answer:</label>
                    <textarea id="answer" name="answer" rows="4" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required></textarea>
                </div>
                
                <div class="mb-4">
                    <label for="questions" class="block text-gray-700 text-sm font-bold mb-2">Questions (one per line):</label>
                    <textarea id="questions" name="questions" rows="6" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required></textarea>
                </div>
                
                <div class="mb-6">
                    <label for="keywords" class="block text-gray-700 text-sm font-bold mb-2">Keywords (comma separated):</label>
                    <input type="text" id="keywords" name="keywords" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                </div>
                
                <div class="flex justify-end space-x-4">
                    <button type="button" id="cancelAddBtn" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded">
                        Cancel
                    </button>
                    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">
                        Save Entry
                    </button>
                </div>
            </form>
        </div>
        
        <!-- Knowledge Base Entries -->
        <div class="space-y-6">
            <% if (entries && entries.length > 0) { %>
                <% entries.forEach(entry => { %>
                    <div class="bg-white shadow rounded-lg overflow-hidden">
                        <div class="bg-blue-500 p-4 flex justify-between items-center">
                            <h3 class="text-white font-semibold">Answer #<%= entry.id.substring(entry.id.length - 5) %></h3>
                            <div class="flex space-x-2">
                                <a href="/knowledge-base/edit/<%= entry.id %>" class="bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded text-sm">Edit</a>
                                <form action="/knowledge-base/delete/<%= entry.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this entry?');" class="inline">
                                    <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-sm">Delete</button>
                                </form>
                            </div>
                        </div>
                        
                        <div class="p-6">
                            <div class="mb-4">
                                <h4 class="font-semibold text-gray-700 mb-2">Answer:</h4>
                                <div class="p-3 bg-gray-50 rounded border border-gray-200 whitespace-pre-wrap">
                                    <%= entry.answer %>
                                </div>
                            </div>
                            
                            <div class="mb-4">
                                <h4 class="font-semibold text-gray-700 mb-2">Questions:</h4>
                                <ul class="list-disc pl-5 space-y-1">
                                    <% entry.questions.forEach(question => { %>
                                        <li class="text-gray-700"><%= question %></li>
                                    <% }) %>
                                </ul>
                            </div>
                            
                            <% if (entry.keywords && entry.keywords.length > 0) { %>
                                <div>
                                    <h4 class="font-semibold text-gray-700 mb-2">Keywords:</h4>
                                    <div class="flex flex-wrap gap-2">
                                        <% entry.keywords.forEach(keyword => { %>
                                            <span class="bg-gray-200 text-gray-700 px-2 py-1 rounded-full text-sm">
                                                <%= keyword %>
                                            </span>
                                        <% }) %>
                                    </div>
                                </div>
                            <% } %>
                            
                            <div class="text-xs text-gray-500 mt-4">
                                Last updated: <%= new Date(entry.updatedAt).toLocaleString() %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="bg-white shadow rounded-lg p-8 text-center">
                    <div class="text-gray-500 mb-4">
                        <svg class="w-16 h-16 mx-auto mb-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                        </svg>
                        <p class="text-lg font-semibold">No knowledge base entries found</p>
                    </div>
                    <p class="text-gray-600">Click the "Add New Entry" button to create your first knowledge base entry.</p>
                </div>
            <% } %>
        </div>
    </div>
    
    <!-- JavaScript for toggle form visibility -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const addNewBtn = document.getElementById('addNewBtn');
            const addNewForm = document.getElementById('addNewForm');
            const cancelAddBtn = document.getElementById('cancelAddBtn');
            
            addNewBtn.addEventListener('click', function() {
                addNewForm.classList.remove('hidden');
                addNewBtn.classList.add('hidden');
            });
            
            cancelAddBtn.addEventListener('click', function() {
                addNewForm.classList.add('hidden');
                addNewBtn.classList.remove('hidden');
            });
        });
    </script>
</body>
</html>